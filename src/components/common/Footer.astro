      <div
        class="mt-0 grid grid-cols-2 gap-8 text-xs text-zinc-400 md:mt-8 xl:col-span-2">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3 class="text-sm text-white">AI</h3>
            <ul role="list" class="mt-4 space-y-2">
              <li>
                <a
                  title="Immersive AI"
                  aria-label="Immersive AI"
                  href="/"
                  class="hover:text-white">
                  Immersive AI
                </a>
              </li>
            </ul>
          </div>
          <div class="mt-12 md:mt-0">
            <h3 class="text-sm text-white">Company</h3>
            <ul role="list" class="mt-4 space-y-2">
              <li>
                <a
                  title="About"
                  aria-label="About"
                  href="/about"
                  class="hover:text-white">
                  About
                </a>
              </li>
            </ul>
          </div>
        </div>
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3 class="text-sm text-white">Stay updated</h3>
            <ul role="list" class="mt-4 space-y-2">
              <li>
                <a
                  title="Relay Blog"
                  aria-label="Relay Blog"
                  href="/blog"
                  class="hover:text-white">
                  Blog
                </a>
              </li>
              <li>
                <a
                  title="Changelog"
                  aria-label="Changelog"
                  href="/changelog"
                  class="hover:text-white">
                  Changelog
                </a>
              </li>
            </ul>
          </div>
          <div class="mt-12 md:mt-0">
            <h3 class="text-sm text-white">Socials</h3>
            <ul role="list" class="mt-4 space-y-2">
              {
                SOCIAL_MEDIA.map((social) => (
                  <li>
                    <a
                      title={social.label}
                      aria-label={social.label}
                      href={social.url}
                      target="_blank"
                      class="hover:text-white">
                      {social.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<footer class="border-t border-white/5 bg-black lg:p-8">
  <div class="mx-auto items-center px-8 py-6 md:px-12 lg:px-16 xl:px-36 2xl:max-w-7xl">
    <div class="flex items-center justify-between">
      <nav class="flex flex-col gap-x-8 gap-y-2 lg:flex-row">
        <a
          class="text-xs text-zinc-400"
          title="Terms of use"
          aria-label="Terms of use"
          href="/legal/terms">
          Terms of use
        </a>
        <a
          class="text-xs text-zinc-400"
          title="Privacy policy"
          aria-label="Privacy policy"
          href="/legal/privacy">
          Privacy policy
        </a>
      </nav>
      <ModeToggle client:load />
    </div>
    <section class="mt-6" x-data="{ year: new Date().getFullYear() }">
      <p class="text-sm text-zinc-400 lg:col-span-2">
        Â© <span>{new Date().getFullYear()}</span>
        {SITE_DATA.organization.legalName} All rights reserved.
      </p>
    </section>
  </div>
</footer>
