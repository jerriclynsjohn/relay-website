---
const { title, description, pubDatetime, image, url } = Astro.props;
---

<div class="md:flex">
  <h2
    id="2023-03-16-heading"
    class="pl-7 text-sm text-black md:w-1/4 md:pl-0 md:pr-12 md:text-right">
    <time datetime={pubDatetime}>{pubDatetime}</time>
  </h2>
  <div class="relative pb-16 pl-7 pt-2 md:w-3/4 md:pl-12 md:pt-0">
    <div class="absolute -top-3 bottom-0 left-0 w-px bg-black/20 md:top-2.5"></div>
    <div
      class="absolute -left-1 -top-[1.0625rem] h-[0.5625rem] w-[0.5625rem] rounded-full border-2 border-black/10 bg-black md:top-[0.4375rem]">
    </div>
    <div class="flex flex-col">
      <div>
        <img class="rounded-2xl" src={image} alt={description} />
        <h3 class="mt-8 text-lg text-black">{title}</h3>
        <p class="mt-4 text-balance text-sm text-zinc-500">
          {description}
        </p>
        <div class="mt-4">
          <a
            href={url}
            title={title}
            aria-label={title}
            class="inline-flex items-center justify-center rounded-full border border-transparent bg-black px-4 py-2 text-sm text-white ring-1 ring-transparent duration-200 hover:bg-black/10 hover:text-black focus:ring-2 focus:ring-black focus:ring-offset-2">
            Read further
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
